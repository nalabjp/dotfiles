[core]
excludesfile = ~/.gitignore
[difftool "sourcetree"]
cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$LOCAL\" \"$REMOTE\"
path = 
[mergetool "sourcetree"]
cmd = /Applications/p4merge.app/Contents/MacOS/p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
trustExitCode = true
[pager]
# ln -s /usr/local/opt/git/share/git-core/contrib/diff-highlight/diff-highlight /usr/local/bin
log = diff-highlight | less
show = diff-highlight | less
diff = diff-highlight | less
[merge]
tool = vimdiff
[push]
default = simple
[alias]
a = add -v
aa = add -Av
au = add -uv
b = branch
c = commit -v
cm = commit -mv
ch = checkout
chb = checkout -b
d = diff
dc = diff --cached
l = log --stat
lg = log --graph --decorate --all
lo = log --oneline
mg = merge
mgn = merge --no-ff
p = push -v
pl = pull --rebase -v
r = rm
rc = rm --cached
rb = rebase
rs = reset
rsh = reset --hard
rss = reset --soft
rv = revert
re = remote
s = status
sh = show
st = stash
stl = stash list
stp = stash pop
[help]
autocorrect = 1
