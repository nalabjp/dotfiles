# Keys
escape ^Tt
zombie ^[

# shell(env)
shell -$SHELL

# 端末が落ちたら自動でデタッチ
autodetach on

# スタートアップメッセージをoff
startup_message off

# vbell
vbell off

# スクロールバッファ
defscrollback 1024

# タイトル
shelltitle "$ |bash"

# hardstatus
hardstatus on
hardstatus string "%?%h%:%t (screen #%n on %H)%?"
caption always "%{=r dd}%-Lw%40L>%?%F%{=b dR}%:[%? %n%f %t %?%F%{-}%:]%?%+Lw %?%F%-024=GNU Screen of Git master%:%=%?"
sorendition "+rb .G"
