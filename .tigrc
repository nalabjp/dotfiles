# ----------
# Display
# ----------
# diff context line number in diff view
set diff-context = 6
set vertical-split = no
set split-view-height = 80%

# ----------
# key bind
# ----------
# generic
# do nothing
bind generic G none
# gg like vim key bind
bind generic g move-first-line
# G like vim key bind
bind generic G move-last-line

# main
# pull from remote
bind main <Ctrl-r> !git pull
# checkout 
bind main C !?git checkout %(commit)
# commit --fixup
bind main F ?!git commit --fixup %(commit)
# commit --suqash
bind main S ?!git commit --squash %(commit)
# rebase -i
bind main I !git rebase -i %(commit)^

# branch
# make new branch
bind branch n !git checkout -b %(prompt) %(branch)
# remove branch for squash merge
bind branch D !?git branch -D %(branch)
# remove branch
bind branch d !?git branch -d %(branch)

# status
# commit -v
bind status C !git commit -v

# diff
# commit --fixup
bind diff F ?!git commit --fixup %(commit)
# commit --suqash
bind diff S ?!git commit --squash %(commit)
# browse
bind diff B @hub browse -- commit/%(commit)
# rebase -i
bind diff I !git rebase -i %(commit)^

# blog
# browse
bind blob B @hub browse -- tree/%(commit)/%(file)

# tree
# browse
bind tree B @hub browse -- tree/%(commit)/%(directory)
